-- ftd.column code:
optional caption caption:
body body:
string lang:
optional string $filename:
optional string $full:
padding-bottom: 12
padding-top: 12
width: fill

--- ftd.text:
text: $caption
if: $caption is not null
color: $config.n2
width: fill
size: 14
background-color: $config.bg-grey-6
padding-top: 10
padding-bottom: 10
padding-left: 20
padding-right: 20
border-top-radius: 4
font: Itim

--- ftd.code:
if: $caption is not null
text: $body
lang: $lang
color: $config.n5
width: fill
size: 17
line-height: 25
padding-top: 10
padding-left: 20
padding-bottom: 10
padding-right: 20
background-color: $config.n6
border-bottom-radius: 4
overflow-x: auto

--- ftd.code:
if: $caption is null
text: $body
lang: $lang
color: $config.n5
width: fill
size: 17
line-height: 25
padding-top: 10
padding-left: 20
padding-bottom: 10
padding-right: 20
background-color: $config.n6
border-bottom-radius: 4
border-top-radius: 4
overflow-x: auto

-- ftd.text markdown:
body body:
optional boolean collapsed:
optional caption title:
optional boolean two_columns:
text: $body
size: 15
line-height: 24
color: $config.n8
color if $fpm.dark-mode: $config.n1
padding-bottom: 8
padding-left: 150
padding-right: 150
padding-left if $fpm.mobile: 30
padding-right if $fpm.mobile: 30
font: Itim
